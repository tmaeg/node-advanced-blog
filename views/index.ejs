<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>Node Advanced Blog</title>
    <%- include('./head') %>
  </head>
  <body>
    <%- include('./header') %>
    <main>
      <div class="grid-container">
        <% allBlogs.forEach(blog => { %>
        <div class="card">
          <a href="blog/<%= blog._id%>">
            <img src="/public/images<%= blog.image %>" alt="blog image">
            <div>
              <h2><%= blog.title %></h2>
              <p><%= blog.summary %></p>
            </div>
          </a>
        </div>
        <% }) %>
      </div>
      <div class="bottom">
        <% if(session) { %>
        <a href="/blog/create" class="create-button">記事を書く</a>
        <% } else { %>
        <a href="/user/login" class="login-button">ログイン</a>
        <a href="/user/create" class="user-create-button">ユーザー登録</a>
        <% } %>
      </div>
    </main>
    <%- include('./footer') %>
  </body>
</html>